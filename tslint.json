{
    "defaultSeverity": "error",
    "extends": [
      "tslint:latest",
      "tslint-config-prettier",
      "tslint-react"
    ],
    "rules": {
      "prettier": [
        true, {
          "printWidth": 140,
          "tabWidth": 2,
          "useTabs": false,
          "semi": true,
          "singleQuote": true,
          "trailingComma": "all",
          "bracketSpacing": true,
          "arrowParens": "always"
        }
      ]
    }
  }